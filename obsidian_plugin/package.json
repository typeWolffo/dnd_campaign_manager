{
	"name": "Grimbane",
	"version": "1.0.0",
	"description": "Create immersive D&D campaigns with seamless Obsidian integration",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"generate:client": "swagger-typescript-api generate --path http://localhost:4000/swagger/json -o ./src/api --axios --name generated-api.ts --api-class-name API --extract-request-params --extract-request-body --extract-response-body --extract-response-error --modular --no-format-code"
	},
	"keywords": [
		"obsidian",
		"dnd",
		"campaign",
		"notes"
	],
	"author": "Grimbane",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "24.0.8",
		"@typescript-eslint/eslint-plugin": "8.35.1",
		"@typescript-eslint/parser": "8.35.1",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.5",
		"obsidian": "1.8.7",
		"swagger-typescript-api": "13.2.7",
		"tslib": "2.8.1",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"axios": "1.10.0"
	}
}
